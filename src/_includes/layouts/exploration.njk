{% extends "layouts/base.njk" %}

{% block content %}
  <article class="exploration">
    <h1>{{title}}</h2>
    <p>Status: {{status}}</p>
    <p>Tags: {{tags | join(", ")}}</p>
    <p>Started: {{startDate.toISOString().split("T")[0] }}</p>
    <p>Last update: {{latestUpdate.toISOString().split("T")[0]}}</p>

    <section>
      <h2>Overview</h2>
        {{content | safe}}
    </section>

 <section class="exploration-logs">
    <h2>Logs</h2>
    {% set logs = page.logs | reverse %}
    <p>{{page.logs}}</p>
  </section>

  <section>
    <h3>Lingering questions</h3>
    <ul>
      {% for question in unansweredQuestions %}
      <li>{{question}}</li>
    {% endfor %}
    </ul>
  </section>

  <section>
    <h3>References</h3>
    <ul>
      {% for ref in references %}
      <li>{{ref}}</li>
      {% endfor %}
    </ul>
  </section>

    <section>
    <h3>Tools</h3>
    <ul>
      {% for tool in tools %}
        <li>{{tool}}</li>
      {% endfor %}
    </ul>
  </section>

</article>
{% endblock %}
