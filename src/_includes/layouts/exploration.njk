{% extends "layouts/base.njk" %}

{% block content %}
  <article class="exploration">
    <h1>{{title}}</h2>
    <p>Status: {{status}}</p>
    <p>Tags: {{tags | join(", ")}}</p>
    <p>Started: {{startDate | toStringDate }}</p>
    <p>Last update: {{latestUpdate | toStringDate}}</p>

    <section>
      <h2>Overview</h2>
        {{content | safe}}
    </section>

 <section class="exploration-logs">
    <h2>Logs</h2>
    <p>Log entries: {{collections.explorationLogs | length}}</p>

    <!-- the list of the log entries starts here -->
    <!-- To do: -->
    <!-- 1. use nunjucks set variable to set the explorationLogs collection and use the custom filter to pass the current page's fileSlug as argument -->
    <!-- 2. use nunjucks for loop to just loop of the data from the collection -->
    <!-- the list of the log entries ends here -->
  </section>

  <section>
    <h3>Lingering questions</h3>
    <ul>
      {% for question in unansweredQuestions %}
      <li>{{question}}</li>
    {% endfor %}
    </ul>
  </section>

  <section>
    <h3>References</h3>
    <ul>
      {% for ref in references %}
      <li>{{ref}}</li>
      {% endfor %}
    </ul>
  </section>

    <section>
    <h3>Tools</h3>
    <ul>
      {% for tool in tools %}
        <li>{{tool}}</li>
      {% endfor %}
    </ul>
  </section>

</article>
{% endblock %}
